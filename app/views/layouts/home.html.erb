<!DOCTYPE html>
<html>
<head>
<title>Frqnt Flyr</title>
<%= stylesheet_link_tag 'application', media: 'all' %>
<%= csrf_meta_tags %>
</head>
<body>
<div class=container>
  <%- flash.each do |key, value| -%>
    <div class="alert-box alert radius">
      <div class="flash flash-<%= key %>">
        <%= value %>
      </div>
    </div>
  <%- end -%>
</div>

<%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= render "layouts/footer" %>
  <%= yield :extra_footer %>
</body>
</html>
