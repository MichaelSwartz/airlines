<img src=<%= @user.profile_photo %>

<p>
<%= @user.email%>
</p>
<%= link_to "Update Account", edit_user_registration_path %>

<% unless @user.airlines.empty? %>
  Airlines owned:
  <ul>
    <% @user.airlines.each do |airline| %>
      <li><%= airline.name %></li>
    <%- end -%>
  </ul>
<%- end -%>

<h5>Reviews:</h5>
<ul>
  <% @reviews.each do |airline, reviews| %>
    <li>
      <%= airline.name %>
      <ul>
        <% reviews.each do |r| %>
          <li><%= r.body %></li>
        <% end %>
      </ul>
    </li>
  <%- end -%>
</ul>
